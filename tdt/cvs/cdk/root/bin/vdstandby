#!/bin/sh
if [ $# -eq 1 ]; then
   if [ "$1" = "-a" ]; then
	echo "enter standby..."
	/bin/stfbcontrol hd
	echo on > /proc/stb/avs/0/standby
	echo off > /dev/vfd 
	sleep 2 
	/bin/fp_control -dt 1
	echo "done"
   elif [ "$1" = "-d" ]; then
	echo "end standby..."
       #enable hdmi
       stfbcontrol he
       echo off > /proc/stb/avs/0/standby
    fi
fi
